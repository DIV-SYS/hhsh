<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splasher"
    android:background="@color/colorAccent">


    <ImageView
        android:id="@+id/homelogo"
        android:layout_width="371dp"
        android:layout_height="350dp"
        android:layout_marginTop="68dp"
        android:background="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splasher1" />

    <TextView
        android:id="@+id/introf"
        android:layout_width="396dp"
        android:layout_height="94dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif"
        android:text="Congrats, You're Now Smart Shopper"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homelogo" />

    <TextView
        android:id="@+id/intros"
        android:layout_width="402dp"
        android:layout_height="93dp"
        android:fontFamily="sans-serif-black"
        android:text="HAPPY SHOPPING JOURNEY"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="549dp" />
</androidx.constraintlayout.widget.ConstraintLayout>

