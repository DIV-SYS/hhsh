<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".loginad">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login To Continue"
        android:textSize="25dp"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/loginotextag"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the Phone. No"
        android:layout_marginTop="50dp"
        android:id="@+id/textphonologo"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/design_default_color_primary"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_marginTop="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/phonoeditologo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter The Passward"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:id="@+id/passologotexto"
        android:layout_marginLeft="20dp"
        android:textColor="@color/design_default_color_primary"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/passobtnlogoo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textSize="25dp"
            android:background="@color/design_default_color_primary"
            android:textColor="#ffffff"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="20dp"
            android:id="@+id/backologoagoo"/>
        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textSize="25dp"
            android:background="@color/design_default_color_primary"
            android:textColor="#ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/loginologobtn"/>
    </LinearLayout>



</LinearLayout>