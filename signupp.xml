<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".signupp">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@android:color/holo_red_dark"
        android:text="Signup"
        android:textSize="30sp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/allerta"
        android:text="Create Your Shopping Account"
        android:layout_gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Enter Full Name"
        android:textSize="22dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="text"
        android:id="@+id/signupfullname_shop"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="ENTER THE FULL NAME"/>

    <EditText
        android:id="@+id/phoneno_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="8dp"
        android:phoneNumber="true"
        android:text="Name" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="8dp"
        android:hint="Enter The Email"
        android:id="@+id/signupemail_shop"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="8dp"
        android:hint="Enter The Passsward"
        android:id="@+id/passward_shop"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:background="@android:color/holo_blue_bright"
        android:textColor="#ffffff"
        android:textSize="20sp"/>
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/clickablelogin"
        android:layout_height="wrap_content"
        android:text="Click Here To LOGIN"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/background_dark"
        android:layout_gravity="center"
        android:textSize="22dp"/>




</LinearLayout>